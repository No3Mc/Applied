{
    "manifest_version": 3,
    "name": "Simple Extension",
    "version": "1.0",
    "description": "A simple browser extension with plus and minus buttons.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs" 
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_popup_features": {
            "type": "popup",
            "pinned": true
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["xlsx.full.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
